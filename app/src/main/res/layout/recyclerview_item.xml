<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:elevation="20dp"
    app:cardBackgroundColor="@color/cardview_light_background"

    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gameTotalHours_xml"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="Hours"
            android:textColor="#4C4A4A"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gameName_xml"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/gameName_xml"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="מוצר"
            android:textColor="@color/black"
            android:textDirection="rtl"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gameImage_xml"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gameImage_xml"
            android:layout_width="45dp"

            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:adjustViewBounds="true"
            android:paddingVertical="4dp"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/circleImageView" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
